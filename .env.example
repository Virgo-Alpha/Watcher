# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,web

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/watcher

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# AI Service Configuration (Google AI Studio / Gemini)
# Get your Google AI Studio API key from: https://aistudio.google.com/app/apikey
# The key should start with 'AIzaSy' (Google AI Studio API key)
# Used for: Converting natural language to CSS selectors, generating change summaries
LLM_API_KEY=your-google-ai-studio-api-key-here

# Frontend Configuration
# For local development, use absolute URL to backend
# For production, leave empty or set to empty string to use relative URLs
# Development: http://localhost:8000/api/v1
# Production: (empty) or /api/v1
REACT_APP_API_URL=http://localhost:8000/api/v1

# Production Security Settings (set to True in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Email Configuration (for production)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# CORS Configuration (comma-separated URLs for production)
# If not specified, all origins will be allowed (useful for initial deployment)
# For production, specify your frontend URLs: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000